<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".forgotpassword.ForgotPasswordNewPassword"
    tools:showIn="@layout/activity_forgot_password_new_password">

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="164dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="174dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvFPNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter new password:" />

        <EditText
            android:id="@+id/etFPNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvFPConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm new password:" />

        <EditText
            android:id="@+id/etFPConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnFPFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="finishForgotPassword"
            android:text="Finish" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>